<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.SystemMenuDao">
    <sql id="allFiledId">
        id,text,url,parentIds
    </sql>
    <!-- List<SystemMenu> selectMenuId(@Param("parentId") , @Param("menuId")); -->
    <select id="selectMenuId" resultType="SystemMenu">
        SELECT <include refid="allFiledId"/> FROM system_menu WHERE parentIds=#{parentId} and
        id in
        <foreach collection="menuId" item="id" open="(" separator="," close=")" >
            #{id}
        </foreach>
    </select>

    <!-- List<SystemMenu> selectMenuParentIdId(int parentId); -->
    <select id="selectMenuParentIdId" parameterType="int" resultType="SystemMenu">
        SELECT <include refid="allFiledId"/> FROM system_menu WHERE parentIds=#{parentId}
    </select>

    <!-- String selectTitleParentIds(int parentIds); -->
    <select id="selectTitleParentIds" parameterType="int" resultType="String">
        select text from system_menu where id=#{id};
    </select>
</mapper>
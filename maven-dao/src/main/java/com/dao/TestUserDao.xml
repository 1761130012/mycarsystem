<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.TestUserDao">

    <!-- int insertUser(TestUser testUser); -->
    <insert id="insertUser" parameterType="TestUser">
        insert test_user(name,image) value (#{name},#{image,jdbcType=BLOB});
    </insert>


    <!-- byte[] getImage(); -->
    <select id="getImage" resultType="TestUser">
        select * from  test_user where id=1;
    </select>

    <!-- List<TestUser> queryAll(); -->
    <select id="queryAll" resultType="TestUser">
        select * from  test_user
    </select>
</mapper>